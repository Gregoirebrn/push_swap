########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	commands.c\
				push_swap.c\

SRCS_D		:=	src/

OBJS		:=	$(SRCS:%.c=$(OBJS_D)%.o)

OBJS_D		:=	objs/

HEAD		:=	push_swap.h

HEAD_D		:=	.

CFLAGS		:=	-Wall -Wextra -Werror

BIN			:=	push_swap

########################################################################################################################
#                                                         LIB                                                          #
########################################################################################################################
LIB			:=	libft.a

LIB_D		:=	libftbis/

LIB_I		:=	$(LIB_D)

LIB_H		:=	$(LIB_I)libft.h

LIB_A		:=	$(addprefix $(LIB_D), $(LIB))

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	#lib
				$(MAKE) $(BIN)

lib			:
				$(MAKE) -C $(LIB_D)

$(SVR)		:	$(OBJS_D) $(OBJS) $(HEAD) # $(LIB_A)
				$(CC) $(CFLAGS) -o $(BIN) $(OBJS) #$(LIB_A)

$(OBJS)		:	$(OBJS_D)%.o: $(SRCS_D)%.c $(HEAD) # $(LIB_H)
				$(CC) $(CFLAGS) -I/usr/include -Ilibftbis -c $< -o $@

$(OBJS_D)	:
				@mkdir -p $(OBJS_D)

########################################################################################################################
#                                                        BONUS                                                         #
########################################################################################################################
########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				$(RM) -r $(OBJS) $(OBJS_D)
				#$(MAKE) clean -C libftbis

fclean		:	clean
				$(RM) $(BIN)
				#$(MAKE) fclean -C libftbis

re			:	fclean all

.PHONY: all bonus clean fclean re # lib
